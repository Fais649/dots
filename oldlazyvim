-- bootstrap lazy.nvim, LazyVim and your plugins
require("config.lazy")

require("cyberdream").setup({
  -- Enable transparent background
  transparent = false,

  italic_comments = true,

  hide_fillchars = true,

  borderless_telescope = false,

  terminal_colors = true,
  cache = false,
  theme = {
    variant = "default", -- use "light" for the light variant. Also accepts "auto" to set dark or light colors based on the current value of `vim.o.background`
    saturation = 0.5, -- accepts a value between 0 and 1. 0 will be fully desaturated (greyscale) and 1 will be the full color (default)
    colors = {
      bg = "#000000",
    },
  },

  extensions = {
    telescope = true,
    notify = true,
    mini = true,
  },
})

vim.cmd.colorscheme("cyberdream")
require("lspconfig").sourcekit.setup({})

vim.keymap.set({ "n", "v", "t", "i" }, "<A-left>", "<S-left>", { desc = "go left" })
vim.keymap.set({ "n", "v", "t", "i" }, "<A-right>", "<S-right>", { desc = "go right" })
