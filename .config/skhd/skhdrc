# Show system statistics
# fn + lalt - 1 : "${HOME}"/.config/yabai/scripts/show_cpu.sh
# fn + lalt - 2 : "${HOME}"/.config/yabai/scripts/show_mem.sh
# fn + lalt - 3 : "${HOME}"/.config/yabai/scripts/show_bat.sh
# fn + lalt - 4 : "${HOME}"/.config/yabai/scripts/show_disk.sh
# fn + lalt - 5 : "${HOME}"/.config/yabai/scripts/show_song.sh

# Navigation
cmd + alt - h : if [ $(yabai -m query --windows --window | jq -r '."has-fullscreen-zoom"') = "true" ]; then yabai -m window --toggle zoom-fullscreen; else yabai -m window --focus west || yabai -m display --focus west; fi
cmd + alt - j : if [ $(yabai -m query --windows --window | jq -r '."has-fullscreen-zoom"') = "true" ]; then yabai -m window --toggle zoom-fullscreen; else yabai -m window --focus south || yabai -m display --focus south; fi
cmd + alt - k : if [ $(yabai -m query --windows --window | jq -r '."has-fullscreen-zoom"') = "true" ]; then yabai -m window --toggle zoom-fullscreen; else yabai -m window --focus north || yabai -m display --focus north; fi
cmd + alt - l : if [ $(yabai -m query --windows --window | jq -r '."has-fullscreen-zoom"') = "true" ]; then yabai -m window --toggle zoom-fullscreen; else yabai -m window --focus east || yabai -m display --focus east; fi

cmd + alt - m: yabai -m window --toggle zoom-fullscreen
cmd + alt - w: skhd --key "cmd - w"

cmd - h : :
# Moving windows
# shift + alt - h : yabai -m window --warp west
# shift + alt - j : yabai -m window --warp south
# shift + alt - k : yabai -m window --warp north
# shift + alt - l : yabai -m window --warp east

# Move focus container to workspace
cmd + alt - b : yabai -m window --space prev; yabai -m space --focus prev
cmd + alt - f : yabai -m window --space next; yabai -m space --focus next

# alt - b :  yabai -m space --focus prev
# alt - f :  yabai -m space --focus next

